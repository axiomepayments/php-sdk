{
    "name": "axiomepayments/php-sdk",
    "description": "Enterprise Payment Infrastructure - Professional-grade card processing with instant cryptocurrency settlements",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "AxiomePayments",
            "email": "tech@axiomepayments.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "AxiomePayments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AxiomePayments\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AxiomePayments\\Laravel\\AxiomePaymentsServiceProvider"
            ],
            "aliases": {
                "AxiomePayments": "AxiomePayments\\Laravel\\Facades\\AxiomePayments"
            }
        }
    },
    "minimum-stability": "stable",
    "keywords": [
        "axiomepayments",
        "payment",
        "crypto",
        "api",
        "sdk",
        "laravel"
    ],
    "homepage": "https://axiomepayments.com",
    "support": {
        "email": "tech@axiomepayments.com",
        "docs": "https://axiomepayments.com/api-documentation"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
